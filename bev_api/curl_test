# curl -X PUT -H "Accept: application/json" http://localhost:8080/channel/123412/mod/1231234


curl --request POST --data "{\"bev_name\": \"Cidre\", \"brand_name\": \"Stella Artois\", \"ratings\": [ { \"value\": 5, \"notes\": \"ok\" }, { \"value\": 4, \"notes\": \"not the best\" } ] }" -H "Accept: application/json" http://localhost:8080/bev